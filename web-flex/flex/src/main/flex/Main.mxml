<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute">
    <mx:RemoteObject id="pingService" destination="PingPongBlazeServiceObject">
        <mx:method name="ping" result="pongResult(event)"/>
    </mx:RemoteObject>
    <mx:Text id="pongText" text="Ping...?"/>
    <mx:Button id="pingButton" label="Ping" click="{ping()}" y="100"/>
    <mx:Script><![CDATA[
        import mx.rpc.events.ResultEvent;

        private function pongResult( event:ResultEvent ):void {
            this.pongText.text += event.result;
        }

        private function ping():void {
            pingService.ping();
        }
        ]]></mx:Script>
</mx:Application>
